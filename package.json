{
  "name": "clirio-starter-kit",
  "version": "1.0.0",
  "description": "A TypeScript starter-kit for a node.js command-line application based on the Clirio framework",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "module": "build/module/index.js",
  "repository": "git@github.com:stepanzabelin/clirio-starter-kit.git",
  "license": "MIT",
  "bin": {
    "my-cli": "./build/main/cli.js"
  },
  "keywords": [
    "cli",
    "console",
    "command",
    "option",
    "parser",
    "argument",
    "args",
    "argv",
    "terminal",
    "shell",
    "interface"
  ],
  "author": "Stepan Zabelin",
  "scripts": {
    "build": "run-p build:*",
    "build:main": "tsc -p tsconfig.main.json",
    "build:module": "tsc -p tsconfig.module.json",
    "watch:build": "tsc -p tsconfig.json -w",
    "fix:prettier": "prettier --write \"./{src,tests}/**/*.ts\"",
    "fix:eslint": "eslint \"./src/**/*.ts\" \"./tests/**/*.ts\" -c .eslintrc-final.json --fix",
    "fix": "run-s fix:*",
    "test:eslint": "eslint \"./src/**/*.ts\" \"./tests/**/*.ts\"  --quiet -c .eslintrc-final.json",
    "test:typescript": "tsc -p tsconfig.json --noEmit",
    "test:cspell": "cspell \"{./**/*.js,./**/*.ts}\" --no-progress",
    "test:unit": "jest --silent=false --bail",
    "test": "run-s build test:*",
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "prepare": "husky install",
    "dev": "ts-node -r tsconfig-paths/register src/cli.ts"
  },
  "engines": {
    "node": ">=12"
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "clirio": "^1.2.0",
    "joi": "^17.9.2",
    "joi-class-decorators": "^1.1.0",
    "mathjs": "^11.8.2",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.8.0"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.8",
    "@types/sinon": "^10.0.6",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "cspell": "^6.31.1",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "husky": "^8.0.3",
    "jest": "^27.4.7",
    "npm-run-all": "^4.1.5",
    "pinst": "^3.0.0",
    "prettier": "^3.0.0",
    "sinon": "^12.0.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^9.0.0",
    "typescript": "^4.5.4"
  },
  "files": [
    "build/main",
    "build/module",
    "!**/*.spec.*",
    "!**/*.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ]
}
