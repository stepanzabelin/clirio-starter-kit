{
  "name": "clirio",
  "version": "1.0.0-alpha.1",
  "description": "Clirio - a mini framework for node.js command-line interfaces",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "module": "build/module/index.js",
  "repository": "git@github.com:stepanzabelin/clirio-starter-kit.git",
  "license": "MIT",
  "bin": {
    "clirio-example": "./build/main/cli.js"
  },
  "keywords": [
    "cli",
    "console",
    "command",
    "option",
    "parser",
    "argument",
    "args",
    "argv",
    "terminal",
    "shell",
    "interface"
  ],
  "author": "Stepan Zabelin",
  "scripts": {
    "build": "run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "watch:build": "tsc -p tsconfig.json -w",
    "fix:prettier": "prettier --write \"./src/**/*.ts\"",
    "fix:eslint": "eslint ./src --ext .ts  -c .eslintrc-final.json --fix",
    "fix": "run-s fix:*",
    "test:eslint": "eslint ./src --quiet -c .eslintrc-final.json",
    "test:typescript": "tsc -p tsconfig.json --noEmit",
    "test:cspell": "cspell \"{./**/*.js,./**/*.ts}\" --no-progress",
    "test:unit": "jest --silent=false --bail",
    "test": "run-s build test:*",
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "prepare": "husky install",
    "dev": "ts-node -r tsconfig-paths/register src/cli.ts"
  },
  "engines": {
    "node": ">=14"
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "mathjs": "^11.8.2",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.8.0"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.8",
    "@types/sinon": "^10.0.6",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "clirio": "link:../clirio",
    "cspell": "^4.1.0",
    "eslint": "^7.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.0",
    "jest": "^27.4.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.1",
    "sinon": "^12.0.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^9.0.0",
    "typescript": "^4.5.4"
  },
  "files": [
    "build/main",
    "build/module",
    "!**/*.spec.*",
    "!**/*.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "testEnvironment": "node"
  }
}
